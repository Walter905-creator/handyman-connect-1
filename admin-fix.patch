+        return res.status(401).json({
+            success: false,
+            error: 'Authorization token required'
+        });
+    }
+    
+    const token = authHeader.substring(7);
+    const admin = verifyAdminToken(token);
+    
+    if (!admin) {
+        return res.status(401).json({
