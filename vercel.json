{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://fixloapp.onrender.com/api/$1" },
    { "src": "/(.*)", "dest": "client/build/$1" },
    { "src": "/(.*)", "dest": "client/build/index.html" }
  ]
}
